{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "lib/**/*"
  ]
}
